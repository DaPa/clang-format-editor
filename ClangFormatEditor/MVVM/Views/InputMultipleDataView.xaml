<Window
  x:Class="ClangFormatEditor.MVVM.Views.InputMultipleDataView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:ClangFormatEditor"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Title="Input"
  Width="525"
  Height="640"
  d:DataContext="{d:DesignInstance local:InputMultipleDataViewModel,
                                   IsDesignTimeCreatable=True}"
  Background="WhiteSmoke"
  Icon="/ClangFormatEditor;component/Resources/ClangPowerToolsIco.ico"
  ShowInTaskbar="False"
  WindowStartupLocation="CenterScreen"
  WindowStyle="ToolWindow"
  mc:Ignorable="d">

  <!--  Main grid  -->
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="15" />
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="15" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="10" />
      <RowDefinition Height="*" />
      <RowDefinition Height="10" />
    </Grid.RowDefinitions>
    <TextBox
      Name="CodeEditor"
      Grid.Row="1"
      Grid.Column="1"
      AcceptsReturn="True"
      AcceptsTab="True"
      FontFamily="Courier New"
      FontSize="14"
      HorizontalScrollBarVisibility="Auto"
      Text="{Binding Input}"
      TextWrapping="NoWrap"
      VerticalScrollBarVisibility="Auto" />
  </Grid>
</Window>
